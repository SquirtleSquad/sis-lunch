<ul id="places">
<% @places.each do |p| -%>
	<li id="place_<%=p.id%>">
		<%= link_to "[x]", place_path(p), :method => :delete, :confirm => 'Are you sure you want to delete this place? All votes will be lost.', :remote => true %>
		
		<%= link_to "[vote]", votes_path(:place => p), :method => :post, :remote => true %>
		<%= p.name %>
		
		<% unless p.votes.empty? -%>
		<ul>
			<% p.votes.each do |v| -%>
			<li id="vote_<%=v.id%>">
				<%= link_to "[x]", vote_path(v), :method => :delete, :confirm => 'Are you sure you want to unvote for this place?', :remote => true if v.person == session[:user] %>
				<%= v.person.name %>
			</li>
			<% end %>
		</ul>
		<% end %>
	</li>
<% end %>
</ul>