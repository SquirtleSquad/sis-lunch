<% @places.each do |p| -%>
	<tr id="place_<%=p.id%>">
		<td><%= link_to "Vote", votes_path(:place => p), :method => :post, :remote => true, :class => 'vote-button' %></td>
		<td>
			<span class="place-name"><%= p.name %></span>
			<% unless p.votes.empty? -%>
			<ul>
				<% p.votes.each do |v| -%>
				<li id="vote_<%=v.id%>" class="<%= "other-vote" if v.person != session[:user] %>">
					<%= link_to "Unvote", vote_path(v), :method => :delete, :remote => true, :class => 'delete-button' if v.person == session[:user] %>
					<%= v.person.name %>
				</li>
				<% end %>
			</ul>
			<% end %>
		</td>
		<td><%= p.walkable? and "Walking" or "Driving" %>
		<td><%= link_to "Delete Place", place_path(p), :method => :delete, :confirm => 'Are you sure you want to delete this place? All votes will be lost.', :remote => true, :class => 'delete-button' if p.person == session[:user] %></td>
	</tr>
<% end %>
